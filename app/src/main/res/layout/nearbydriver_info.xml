<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginLeft="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_8"
    card_view:cardCornerRadius="@dimen/margin_8">

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <!-- logo -->
    <ImageView
        android:id="@+id/driverimage"
        android:background="@drawable/circle"
        android:padding="3dp"
        android:src="@drawable/profile_avatar"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_120"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_12"/>


    <!-- Name -->

    <TextView
        android:id="@+id/tvdrivername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_centerHorizontal="true"
        android:text="Economy"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/driverimage"
        android:layout_toRightOf="@+id/driverimage"
        android:layout_toEndOf="@+id/driverimage"
        android:textSize="@dimen/title"
        android:textStyle="bold" />


    <!-- address -->
    <TextView
        android:id="@+id/tvvehicleno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvdrivername"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_toRightOf="@+id/driverimage"
        android:layout_toEndOf="@+id/driverimage"
        android:textSize="@dimen/subHeader_sp_16"
        android:text="KA03 ML 3231"/>

    <!-- rating -->
    <TextView
        android:id="@+id/vehiclelocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvvehicleno"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/driverimage"
        android:layout_toEndOf="@+id/driverimage"
        android:textSize="@dimen/subHeader_sp_16"
        android:text="Kanhangad"/>

    <!-- Distance -->
    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vehiclelocation"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@+id/driverimage"
        android:layout_toEndOf="@+id/driverimage"
        android:textSize="@dimen/normalText_sp_14"
        android:textStyle="bold"
        android:text="2kms away"/>
    <!-- callicon -->
    <ImageView

        android:id="@+id/btn_phone"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_call"
        android:layout_toLeftOf="@+id/distance"
        android:layout_toStartOf="@+id/distance"
        android:layout_below="@+id/vehiclelocation"
        />

        <Button
            android:id="@+id/btn_bookride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/button_marginBottom"
            android:layout_marginLeft="@dimen/viewpagerbutton_marginLeft"
            android:layout_marginRight="@dimen/viewpagerbutton_marginRight"
            android:background="@drawable/button_cornered"
            android:backgroundTint="@color/text_color"
            android:gravity="center"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="@string/bookride"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/normalText_sp_14"
            android:textStyle="bold" />


</RelativeLayout>


</android.support.v7.widget.CardView>